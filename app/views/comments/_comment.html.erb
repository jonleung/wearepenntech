<div class="well comment">
  <div class="img-container inline">
    <img src="http://src.sencha.io/50/50/<%= comment.image_url %>">
  </div>
  <div class="text-container inline">
    <p class="text">"<%= comment.text %>"</p>
    <p>
      - <em><%= comment.author %>
      at
      <small><%= comment.created_at.strftime("%c") %></small></em>
    </p>
  </div>
  <div class="time-container">
  </div>

</div>